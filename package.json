{
  "name": "calculator",
  "version": "0.1.0",
  "private": true,
  "main": "./src/electron/main.js",
  "scripts": {
    "dev": "next dev -p 3000",
    "electron": "cross-env NODE_ENV=development electron .",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on tcp:3000 && npm run electron\"",
    "build": "cross-env NODE_ENV=production NEXT_TELEMETRY_DISABLED=1 NEXT_DISABLE_SOURCEMAPS=1 NEXT_TRACE_ENTRYPOINTS=false next build && next export",
    "build:electron": "cross-env NODE_ENV=production NEXT_TELEMETRY_DISABLED=1 NEXT_DISABLE_SOURCEMAPS=1 NEXT_TRACE_ENTRYPOINTS=false next build && next export && electron-builder",
    "start": "cross-env NODE_ENV=production electron .",
    "lint": "next lint",
    "package": "electron-builder build --win",
    "clean": "rimraf .next out dist"
  },
  "dependencies": {
    "@radix-ui/react-scroll-area": "^1.2.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "decimal.js": "^10.4.3",
    "lucide-react": "^0.462.0",
    "next": "14.2.16",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.16",
    "postcss": "^8",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.calculator.app",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "extraResources": [
      {
        "from": "src/backend/python/dist/calculator",
        "to": "calculator"
      }
    ]
  }
}
